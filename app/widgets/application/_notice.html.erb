<div id="widget-notice">
	<% if @notice %>
		<p class="alert alert-success">
			<%= @notice %>
			<span class="widget-notice-close pull-right">x</span>
		</p>
	<% end %>
	<% if @alert %>
		<p class="alert alert-error">
			<%= @alert %>
			<span class="widget-notice-close pull-right">x</span>
		</p>
	<% end %>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$(".widget-notice-close").click(function() {
			$("#widget-notice").fadeOut();
		});
	});
</script>