<div id="features" class="features_page">
    <div class="container">
        <div class="features1">
            <!-- header -->
            <h2 class="section_header">
                <hr class="left visible-desktop">
                <span>Veja como é ótimo Ensinar no Edools</span>
                <hr class="right visible-desktop">
            </h2>

            <div class="row-fluid">
                <div class="span12">
                    <h3 class="intro">
                        <%= t('home.pitch') %> 
                    </h3>
                </div>
            </div>

            <!-- feature list -->
            <div class="row-fluid">
                <div class="span4 feature">
					<%= image_tag ('feature_01.png'), :class => 'thumb' %>
