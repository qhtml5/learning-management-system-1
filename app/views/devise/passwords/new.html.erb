<div id="box_login">
  <div class="container">
    <div class="span12 box_wrapper">
      <%= box(title: "Definir nova senha") do %>
        <div class="form">
    			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
            <% if resource.errors.present? %>
              <p class="alert alert-error"><%= resource.errors.full_messages.join(", ").capitalize %></p>
            <% end %>
    				<%= f.text_field :email, placeholder: "Seu Email", autofocus: true %>
    				<%#= f.label :email %>
    				<%#= f.email_field :email %>
    				<%= f.submit "Enviar instruções", class: "btn", id: "send-instructions" %>
    			<% end -%>
        </div>
      <% end %>
      
      <p class="already"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>