<div id="box_login">
  <div class="container">
    <div class="span12 box_wrapper">
      <%= box(title: "Criar conta") do %>
        <div class="form">
					<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						<%= f.input :first_name, autofocus: true, label: false, id: "inputFirstName", placeholder: "Seu nome" %>
						<%= f.input :email, required: true, label: false, id: "inputEMail", placeholder: "Seu Email" %>
						<%= f.input :password, label: false, required: true, id: "inputPassword", placeholder: "Crie uma Senha" %>
						<%= f.submit "Criar conta", class: "btn uppercase" %>
					<% end -%>
          <div class="remember">
            <div class="left">
                <!-- <input id="remember_me" type="checkbox">
                                                <label for="remember_me">Remember me</label> -->
            </div>
            <div class="right">
                <%= link_to "Esqueceu a senha?", new_password_path(resource_name) %>
            </div>
          </div>
        </div>
      <% end %>
            
      <p class="already">JÃ¡ possui conta? <%= link_to "Entrar", new_user_session_path, class: "uppercase" %></p>
    </div>
  </div>
</div>