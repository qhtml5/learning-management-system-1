<div class="checkout_page">
	<div class="container">
		<%= render 'checkouts/cart_header' %>
		<div class="progress">
			<div class="bar" style="width: 34%; background: rgb(130,186,57);"><i class="icon-user"></i> 1. Conecte-se </span></div>
		  <div class="bar" style="width: 33%; font-size: 16px; padding-top: 7px;"><i class="icon-list"></i> 2. Complete seu cadastro</div>
		  <div class="bar" style="width: 33%; background: rgb(242,242,242);"><span style="color: rgb(156,137,156);"><i class="icon-ok"></i> 3. Realize o pagamento</span></div>
		</div>
		<div class="row-fluid cart_container">
			<div class="span8">	
				<div class="box_widget_course">
					<div class="box">
						<div class="content">
							<div class="form">
								<%= simple_form_for(@user, :url => user_registration_path, :html => { :method => :put, :id => "_form-validations" }) do |f| %>
								  <%= render "devise/registrations/form", :f => f, purchasing: true %>
								  <hr>
								  <%= link_to "← voltar", cart_checkouts_path %>
									<%= f.submit "Prosseguir para pagamento →".html_safe, :class => "btn btn-success btn-large pull-right", :id => "prosseguir" %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="span4">
				<%= render "checkouts/order" %>
				<%= render_widget :school_phone_email, :checkout, :school => current_school  %>
				<%= render_widget :secure_info %>
			</div>
		</div>
	</div>
</div>
